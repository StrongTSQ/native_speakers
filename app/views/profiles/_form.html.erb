<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= hidden_field_tag 'profile[user_id]', current_user.id %>
  <div class="field">
    <%= f.label :native_language %>
    <%= f.autocomplete_field :native_language, autocomplete_language_name_dashboard_index_path %>
  </div>
  <% if not @profile.new_record? %>
  <div class="field">
    <label>Other Language Skills</label>
    <div id='language_skills'><%= render 'language_skills' %></div>
  </div>
  <% end %>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
