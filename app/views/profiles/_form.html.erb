<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= hidden_field_tag 'profile[user_id]', current_user.id %>
  <div class="field">
    <%= f.label :native_language %>
    <%= f.autocomplete_field :native_language, autocomplete_language_name_dashboard_index_path %>
  </div>
  <% if not @profile.new_record? %>
  <div class="field">
    <label>I have Language Skills</label>
    <div id='language_skills'><%= render 'language_skills' %></div>
  </div>
  <br />
  <br />
  <div class="field">
    <label>I want to Learn</label>
    <div id='language_interests'><%= render 'language_interests' %></div>
  </div>
  <br/ >
  <br/ >

  <% end %>
  <div class="field">
    <label>I am living in </label><%= f.text_field :city %>(City)
  </div>
  <div class="field">
    <label>I am from</label><%= f.text_field :country %>(Country)
  </div>

  <div class="field">
    <label>I am</label> <%= f.select :gender, [["Male", "Male"], ["Female", "Female"]] %>
  </div>

  <div class="field">
    <label>Birth Date (We use this data for analysis and never share it with other users.)</label><%= f.text_field :birth_date %>
  </div>
  <div class="field">
    <label>Job</label><%= f.text_field :job %>
  </div>
  <div class="field">
    <label>Highest Education</label><%= f.select :education, [["Elementary School", "Elementary School"], ["High School", "High School"], ["College", "College"], ["Graduate", "Graduate"]]%>
  </div>
  <div class="field">
    <label>Major</label><%= f.text_field :major %>
  </div>



  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
<script>
  $('#profile_birth_date').datepicker({
    changeYear: true,
    dateFormat: 'yy-mm-dd',
    yearRange: "1900:2100"
  });
</script>
