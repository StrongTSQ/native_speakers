
<table class='table table-striped'>
  <tr>
    <th>Topic</th>
    <th>Requester</th>
    <th>Tutor</th>
    <th>Status</th>
    <th>From</th>
    <th>To</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.topic %></td>
    <td><%= appointment.requester.username %></td>
    <td><%= appointment.tutor.username %></td>
    <td><%= appointment.status %></td>
    <td><%= appointment.from.strftime('%H:%M') %></td>
    <td><%= appointment.to.strftime('%H:%M') %></td>
    <td><%= appointment.date %></td>
    <td><%= link_to 'Show', appointment %></td>
    <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

